# ============================================================================
# AI Platform Configuration
# ============================================================================

# Enable/Disable AI Platform
AI_ENABLED=true

# Intelligent Healing
AI_INTELLIGENT_HEALING_ENABLED=true
AI_MAX_HEALING_ATTEMPTS=3
AI_CONFIDENCE_THRESHOLD=0.75

# Predictive Healing (disabled by default - no external APIs needed)
AI_PREDICTIVE_HEALING_ENABLED=false

# Learning & Optimization
AI_LEARNING_ENABLED=true
AI_PATTERN_MATCHING_ENABLED=true

# Context Restrictions
# CRITICAL: Only activate AI for UI steps, preserve existing behavior for API/Database
AI_UI_ONLY=true

# Healing Timeout (milliseconds)
AI_HEALING_TIMEOUT=5000

# Cache Settings
AI_CACHE_TIMEOUT=300000

# History Settings
AI_HISTORY_MAX_ENTRIES=10000

# ============================================================================
# Execution Mode Support
# ============================================================================
# AI automatically works with both:
# - Sequential execution (single worker)
# - Parallel execution (multiple workers)
# Each worker gets its own thread-safe AI instance

# ============================================================================
# Step Type Behavior
# ============================================================================
# UI Steps: AI healing activated (click, type, navigate, etc.)
# API Steps: AI healing DISABLED - existing retry behavior preserved
# Database Steps: AI healing DISABLED - existing retry behavior preserved
# ============================================================================
