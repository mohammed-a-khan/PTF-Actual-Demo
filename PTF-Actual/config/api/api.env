# API Project-Specific Configuration
# This file contains overrides specific to the API testing project

# Project identification
PROJECT_NAME=API Testing Project
PROJECT_TYPE=api

# Step definitions - Include only API-related step paths
STEP_DEFINITIONS_PATH=test/common/steps;test/api/steps;test/api/step-definitions;src/steps/api

# Browser settings - API tests don't need browser
DEFAULT_BROWSER=none
BROWSER_LAUNCH_REQUIRED=false
HEADLESS=true

# API specific configurations
API_BASE_URL=https://api.example.com
API_TIMEOUT=30000
API_RETRY_COUNT=3
API_RETRY_DELAY=1000

# API request/response logging
API_LOG_REQUESTS=true
API_LOG_RESPONSES=true
API_USER_AGENT=CS-API-Test-Framework/3.0

# Default headers for API requests
API_DEFAULT_HEADERS={"Content-Type":"application/json","Accept":"application/json"}

# Disable browser-related features for API tests
BROWSER_VIDEO=off
HAR_CAPTURE_MODE=never
TRACE_CAPTURE_MODE=never
SCREENSHOT_ON_FAILURE=false
BROWSER_TRACE_ENABLED=false
BROWSER_HAR_ENABLED=false

# Evidence collection for API tests
EVIDENCE_COLLECTION_ENABLED=true
EVIDENCE_MASK_SENSITIVE_DATA=true

# Performance monitoring - API specific
PERFORMANCE_CORE_WEB_VITALS_ENABLED=false
PERFORMANCE_RESOURCE_BUDGET_ENABLED=false

# Test execution
RETRY_COUNT=2
VALIDATE_DUPLICATE_STEPS=true
VALIDATE_DUPLICATE_METHODS=true

# Reporting
REPORT_TYPES=html,json
REPORTS_CREATE_TIMESTAMP_FOLDER=true

# Batch API operations
API_BATCH_FAIL_FAST=false

# Certificate paths (relative to project root)
API_CERTIFICATE_PATH=test/api/certificates
API_DEFAULT_CERT_PASSWORD=