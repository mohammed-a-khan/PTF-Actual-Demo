# AKHAN Production Environment
ENVIRONMENT_NAME=Production
ENVIRONMENT_TYPE=prod

# Environment-specific URLs
BASE_URL=https://akhan.americas.inet.net
API_BASE_URL=https://api-akhan.americas.inet.net
ADMIN_URL=https://admin-akhan.americas.inet.net
DB_HOST=akhan-prod-db.americas.cloud.com

# Production-specific settings
HEADLESS=true
DEBUG_MODE=false
LOG_LEVEL=error
BROWSER_DEVTOOLS=false
BROWSER_SLOWMO=0

# Production feature flags
FEATURE_FLAGS=newUI:true;betaFeatures:false;aiAssist:false;debugPanel:false

# Production test data
TEST_USER_PREFIX=prod_monitor_
TEST_DATA_CLEANUP=true

# Production-specific timeouts (strict)
DEFAULT_TIMEOUT=30000
BROWSER_ACTION_TIMEOUT=8000

# Production monitoring
SCREENSHOT_ON_FAILURE=true
CREATE_BUGS_ON_FAILURE=true
NOTIFICATION_ON_FAILURE=true

# Read-only mode for production
READ_ONLY_MODE=true
SKIP_DESTRUCTIVE_TESTS=true