# Performance Testing Configuration
BASE_URL=https://opensource-demo.orangehrmlive.com/
BROWSER=chrome
HEADLESS=false
TIMEOUT=60000
SCREENSHOT_ON_FAILURE=true
RETRY_COUNT=1

# Performance Test Settings
PERFORMANCE_TEST_ENABLED=true
PERFORMANCE_METRICS_INTERVAL=1000
PERFORMANCE_SCENARIO_PAUSE=5000
PERFORMANCE_SYSTEM_MONITORING=true
PERFORMANCE_RESULT_RETENTION_TIME=300000

# Browser Configuration
BROWSER_MAXIMIZED=true
BROWSER_VIDEO=retain-on-failure
BROWSER_HAR_ENABLED=true
BROWSER_TRACE_ENABLED=true

# Viewport Configuration
BROWSER_VIEWPORT_WIDTH=1920
BROWSER_VIEWPORT_HEIGHT=1080

# Report Configuration
REPORT_TYPES=html,json,excel,pdf

# Step Definitions Path - Use semicolon (;) as separator
# Framework auto-constructs: test/<project>/steps, test/<project>/step-definitions
# We're overriding to include performance-specific locations + framework steps
STEP_DEFINITIONS_PATH=test/performance/steps;test/performance/step-definitions;node_modules/@mdakhan.mak/cs-playwright-test-framework/dist/steps

# Default Credentials
DEFAULT_USERNAME=Admin
DEFAULT_PASSWORD=admin123
