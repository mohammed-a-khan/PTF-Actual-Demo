{
  "name": "ptf-demo-project",
  "version": "1.0.0",
  "description": "Demo project utilizing cs-test-automation-framework",
  "main": "index.js",
  "scripts": {
    "cs-framework": "cross-env NODE_OPTIONS=\"--tls-min-v1.2\" npx cs-framework",
    "test": "npm run cs-framework -- --project=orangehrm",
    "test:orangehrm": "npm run cs-framework -- --project=orangehrm",
    "test:api": "npm run cs-framework -- --project=api --tags=@api",
    "test:ui": "npm run cs-framework -- --project=orangehrm --tags=@ui",
    "test:database": "npm run cs-framework -- --project=database --tags=@database",
    "test:parallel": "npm run cs-framework -- --project=orangehrm --parallel --workers=4",
    "test:debug": "npm run cs-framework -- --project=orangehrm --env=dev",
    "test:headless": "npm run cs-framework -- --project=orangehrm --headless=true",
    "test:performance": "npx cs-framework --project=performance --features=test/performance/features/",
    "test:perf:load": "npx cs-framework --project=performance --features=test/performance/features/ --tags='@load-test'",
    "test:perf:stress": "npx cs-framework --project=performance --features=test/performance/features/ --tags='@stress-test'",
    "test:perf:vitals": "npx cs-framework --project=performance --features=test/performance/features/ --tags='@core-web-vitals'",
    "test:perf:mobile": "npx cs-framework --project=performance --features=test/performance/features/ --tags='@mobile'",
    "test:perf:single": "npx cs-framework --project=performance --features=test/performance/features/ --tags='@single-user'"
  },
  "keywords": [
    "automation",
    "testing",
    "playwright",
    "cucumber",
    "bdd"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@mdakhan.mak/cs-playwright-test-framework": "^1.5.20"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  }
}
